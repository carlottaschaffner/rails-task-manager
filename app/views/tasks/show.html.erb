<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<h2><%= "#{@task.completed ? '[x] This task is completed' : '[ ] finish this ASAP'}" %></h2>

<%= link_to 'Update task', edit_path %>

<%= link_to 'Back to all tasks', root_path %>

<%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
